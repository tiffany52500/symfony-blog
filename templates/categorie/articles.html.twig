{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary me-3">{{ categorie.titre }}</h2>
    </div>

    <ol class="list-group mb-3">
        {% for article in categorie.articles %}
            <a class="list-group-item d-flex justify-content-between align-items-start" href="{{ path('app_article_slug', {'slug': article.slug}) }}">
                <div class="ms-2 me-auto">
                    {{ article.titre }}
                </div>
                <span class="badge bg-primary rounded-pill">{{ article.createdAt | date('d/m/Y') }}</span>
            </a>
        {% endfor %}
    </ol>
{% endblock %}
